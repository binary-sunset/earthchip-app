<%= turbo_frame_tag dom_id(device) do %>
  <div class="card" style="width: 18rem;">
    <div class="card-body">
      <h5 class="card-title">
        <%= turbo_frame_tag "device_#{device.id}_edit" do %>
          <%= link_to edit_device_path(device), class: 'text-decoration-none' do %>
            <%= device.name %> <i class="bi bi-pencil"></i>
          <% end %>
        <% end %>
      </h5>
      <% [:temperature, :light, :humidity].each do |measurement| %>
        <%= render 'device_stats/device_stats', device: device, measurement: measurement %>
      <% end %>
    </div>
  </div>
<% end %>